<style>
h5 {
font-weight : bold;
    }

input {
    border : 2px solid #eaeaea !important;
    font-size: 12px !important;;
    background: #eaeaea;
    color : #222;
}
    
input:focus {
  outline: 2px solid #059DFF !important;
}
    
    body {
        background-color : #F7F7F7;
    }

</style>

<div class="col-lg-9 tableContainer text-nowrap" id="tabId" >
        <h5>Product Details</h5>
        <p >Enter the details of products to be made in AR and 3D</p>  
        <table class=" table table-borderless" id="tableBorder" >
            <form id="formTable">
                <thead class = "clientTableHeader">
                <tr id="tableHeading">
                    <th style="width: 5%">SNo</th>
                    <th style="width: 15%">ARTICLE ID</th>
                    <th style="width: 30%">PRODUCT NAME</th>
                    <th style="width: 50%">PRODUCT PAGE LINK</th>
                </tr>
                </thead>
                <tbody>
                   
                   <tr >
                    <td style="width: 5%" class = "idColumn">Ex:</td>
                    <td style="width: 15%" ><input style="width: 100%" type="text" name="articleId" placeholder="9900062"  id="" readonly></td>
                    <td style="width: 30%"><input style="width: 100%" type="text" name="productName" id="" placeholder="Generic Chair" readonly></td>
                    <td style="width: 100%"><input style="width: 100%" type="text" name="productLink" id="" placeholder="https://yourwebsite.com/Generic_Chair/" readonly></td>
                </tr>
                {{#each dataArr}} 
                <tr id="{{inc @index}}">
                    <td style="width: 5%" class = "idColumn">{{inc @index}}</td>
                    <td style="width: 15%" ><input style="width: 100%" type="text" name="articleId" id="" value="{{this.ArticleId}}"></td>
                    <td style="width: 30%"><input style="width: 100%" type="text" name="productName" id="" value="{{this.ProductName}}"></td>
                    <td style="width: 100%"><input style="width: 100%" type="text" name="productLink" id="" value="{{this.ProductLink}}"></td>
                </tr>
                    {{/each}}
                </tbody>
            </form>
        </table>
 
        <div>   
        <small id="Err" class="text-danger"></small>
        </div> 
</div>

<div class="loading-btn-wrapper">
            <button id="tabBtn" form="formTable" class="loading-btn js_btn-animation-trigger">
               <span>Submit</span> 
            </button>
</div> 

